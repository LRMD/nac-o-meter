
<div class="row">

{% for round in rounds_this_year %}
<div class="col col-lg-3">
    <div class="card p-2 mb-2">
    <div class="card-body">


        <h5 class="card-title"><a href="{{
            path('round', { 'date': round[0].date |date('Y-m-d') } )
        }}">
        {{ round[0].date |date('Y-m-d') }}
        </a> <small class="card-subtitle mb-2 text-muted">
        {{ round[0].name }}
        </small></h6>

        <div class="card-text">{% trans %}lyac.rounds.participants{% endtrans %}: {{ round.c }}</div>
        <div class="card-text">{% trans %}lyac.rounds.qso{% endtrans %}: {{ round.cq }}</div>
    </div>
    <div class="card-footer">

    <div class="progress">
      <div class="progress-bar"
           role="progressbar"
           style="width: {{ round.complete * 100 }}%"
           aria-valuenow="{{ round.complete * 100 }}"
           aria-valuemin="0" aria-valuemax="100">{{ (round.complete * 100) | round }}%
      </div>
    </div>

        {% set stars = ( round.cq / 200 ) + 1 %}
        {% for i in 1..stars|number_format %}
        <small class="text-muted"><i class="far fa-star"></i></small>
        {% endfor %}
    </div>
    </div>
</div>
{% endfor %}

</div>