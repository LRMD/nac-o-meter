{% extends "base.html.twig" %}

{% block title %}
{% if year is defined %}
  {% trans %}menu.rounds{% endtrans %} - {{ year }}
{% elseif round_date is defined %}
  {% trans %}term.round{% endtrans %} {{ round_date }}
  {% if round_name is defined %} ({{ round_name }}){% endif %}
  {% if round_callsign is defined %} - {{ round_callsign }}{% endif %}
{% else %}
  {% trans %}menu.rounds{% endtrans %}
{% endif %}
{% endblock %}

{% block lwidth %}3{% endblock %}
{% block rwidth %}9{% endblock %}

{% block left %}
  {% embed 'rounds/left.html.twig' %}
  {% endembed %}
{% endblock %}

{% block content %}
  {% embed 'rounds/right.html.twig' %}
  {% endembed %}
{% endblock %}
