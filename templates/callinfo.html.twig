<div class="card">

  <div class="card-body">
  {% if callsign is empty %}
    <h5 class="card-title">{% trans %}lyac.callsign.notfound.title{% endtrans %}</h5>
    <p class="card-text">{% trans %}lyac.callsign.notfound.message{% endtrans %}</p>

  {% else %}
    <h5 class="card-title">{% trans %}lyac.callsign.participant{% endtrans %}
    {{ callsign | upper }}
    {% trans %}lyac.callsign.information{% endtrans %}</h5>
    <h6>{% trans %}lyac.callsign.reports{% endtrans %}: {{ reports }}</h6>
  {% endif %}

  <div class="chart-container" style="position: relative; height:300px; width:370px">
    {{ render_chart(userActivityChart) }}
  </div>

</div>

</div>