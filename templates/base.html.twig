<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="Simonas Kareiva, LY2EN">
    <meta name="keywords" content="ham radio, nac, lyac"/>

    {% block stylesheets %}
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    <title>LYAC: {% block title %}{% endblock %}</title>
  </head>
  <body>
    <header>
      <!-- Fixed navbar -->
      <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="{{ path('home') }}">{% trans %}lyac.main{% endtrans %}</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item"><a class="nav-link disabled" href="#">{% trans %}menu.rounds{% endtrans %}</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('results') }}">{% trans %}menu.results{% endtrans %}</a></li>
          </ul>
          <ul class="navbar-nav mr-right">
            <li class="nav-item">
            <a class="nav-link" href="{{ path(app.request.get('_route'), app.request.get('_route_params')| merge ({'_locale': 'lt'})) }}">LT</a>
            </li>
            <li class="nav-item">
            <a class="nav-link" href="{{ path(app.request.get('_route'), app.request.get('_route_params')| merge ({'_locale': 'en'})) }}">EN</a>
            </li>
            <li class="nav-item">
            <a class="nav-link" href="{{ path(app.request.get('_route'), app.request.get('_route_params')| merge ({'_locale': 'ru'})) }}">RU</a>
            </li>
          </ul>

          {{ form_start(callSearch, {action:path('call_search_handle')}) }}
          {{ form_widget(callSearch, { 'attr': {'class': 'form-inline mt-2 mt-md-0'} } ) }}
          {{ form_end(callSearch) }}
        </div>
      </nav>
    </header>

    <main role="main" class="container">
      {# gal kada nors prireiks }
      <div class="starter-template">
        <h1>Bootstrap starter template</h1>
        <p class="lead">Use this document as a way to quickly start any new project.<br> All you get is this text and a mostly barebones HTML document.</p>
      </div>
      { gal kada nors prireiks #}

    <div id="content">
      <div class="row">
        <div class="col-sm-4">
          {% block left %}{% endblock %}
        </div>
        <div class="col-sm-8">
          {% block content %}{% endblock %}
        </div>
      </div>
    </div>
  </div>
  </main><!-- /.container -->


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>
