<div class="card">

  <div class="card-body">
    <h5 class="card-title">{% trans %}Submit your log from the browser{% endtrans %}</h5>

    <form>
      <div class="form-group row">
        <div class="col-sm-4"><pre>[REG1TEST;1]</pre>
        </div>
      </div>
      <div class="form-group row">
        <label for="tName" class="col-sm-2 col-form-label"><pre>TName=</pre></label>
        <div class="col-sm-2">
          <input type="text" readonly class="form-control-plaintext text-monospace" id="tName" value="NAC/LYAC ">
        </div>
        <div class="col-sm-8">
          <select class="form-control text-monospace">
            <option>144 MHz</option>
          </select>
        </div>
      </div>

      <div class="form-group row">
        <label for="tDate" class="col-sm-2 col-form-label"><pre>TDate=</pre></label>
        <div class="col-sm-10">
          <input type="date" class="form-control text-monospace" id="tDate" value="">
        </div>
      </div>
      
      <div class="form-group row">
        <label for="PCall" class="col-sm-2 col-form-label"><pre>PCall=</pre></label>
        <div class="col-sm-10">
          <input type="text" class="form-control text-monospace" id="PCall" placeholder="CALLSIGN">
        </div>
      </div>

      <div class="form-group row">
        <label for="PWWLo" class="col-sm-2 col-form-label"><pre>PWWLo=</pre></label>
        <div class="col-sm-10">
          <input type="text" class="form-control text-monospace" id="PWWLo" placeholder="WWL">
        </div>
      </div>
      
      <div class="form-group row">
        <label for="PBand" class="col-sm-2 col-form-label"><pre>PBand=</pre></label>
        <div class="col-sm-10">
          <input type="text" class="form-control text-monospace" id="PBand" placeholder="433 MHz">
        </div>
      </div>

      <div class="form-group row">
        <label for="RCall" class="col-sm-2 col-form-label"><pre>RCall=</pre></label>
        <div class="col-sm-10">
          <input type="text" class="form-control text-monospace" id="RCall" placeholder="OPERATOR">
        </div>
      </div>
   
      <div class="form-group">
        <label for="remarks"><pre>[Remarks]</pre></label>
        <input type="text" class="form-control text-monospace" id="remarks" placeholder="Please provide your feedback">
      </div>

      <div class="form-group">
        <label><pre>[QSORecords;0]</pre></label>
      </div>
    
      <div class="form-group row">
        <div class="col"> <input type="text" class="form-control px-1 text-monospace" id="qsoDate[]" placeholder="DATE"> </div>
        <div class="col"> <input type="text" class="form-control px-1 text-monospace" id="qsoTime[]" placeholder="TIME"> </div>
        <div class="col"> <input type="text" class="form-control px-1 text-monospace" id="qsoCall[]" placeholder="CALL"> </div>
        <div class="col"><select id="qsoMode[]" class="form-control px-1 text-monospace">
            <option>CW</option>
            <option>FM</option>
            <option>SSB</option>
         </select>
        </div>    
        <div class="col"><input type="text" class="form-control px-1 text-monospace" id="qsoSRST[]" placeholder="SRST"></div>
        <div class="col"><input type="text" class="form-control px-1 text-monospace" id="qsoRRST[]" placeholder="RRST"></div>
        <div class="col-2"><input type="text" class="form-control px-1 text-monospace" id="qsoWWL[]" placeholder="WWL"></div>
      </div>

      <hr />
      <div class="form-group">
        <label for="REG1TEST_File">Alternatively, provide a REG1TEST file:</label>
        <input type="file" class="form-control-file" id="REG1TEST_File">
      </div>
      <div class="form-group text-right">
        <button type="submit" class="btn btn-primary mb-2 pull-right">Submit Log</button>
      </div>
    </form>

  </div>
</div>